FROM openjdk:12-alpine

MAINTAINER icyfenix

ENV SPRING_OUTPUT_ANSI_ENABLED=ALWAYS \
    JAVA_OPTS="" \
    PORT=80 \
    AUTH_PORT=80 \
    PROFILES="default"

ADD /target/*.jar /bookstore-payment.jar

ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar /bookstore-payment.jar --spring.profiles.active=$PROFILES"]

EXPOSE $PORT
